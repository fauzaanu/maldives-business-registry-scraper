{
  "actorSpecification": 1,
  "fields": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "business_id": {
        "type": "string",
        "nullable": true,
        "description": "Unique identifier for the business"
      },
      "business_name": {
        "type": "string",
        "nullable": true,
        "description": "Name of the business"
      },
      "business_type": {
        "type": "string",
        "nullable": true,
        "description": "Type of business (Company, Sole Proprietorship, etc.)"
      },
      "status": {
        "type": "string",
        "nullable": true,
        "description": "Registration status of the business"
      },
      "address": {
        "type": "string",
        "nullable": true,
        "description": "Business address"
      },
      "registration_number": {
        "type": "string",
        "nullable": true,
        "description": "Official registration number"
      },
      "upn": {
        "type": "string",
        "nullable": true,
        "description": "Unique Personal Number"
      },
      "sme_classification": {
        "type": "string",
        "nullable": true,
        "description": "SME classification status"
      },
      "managing_director": {
        "type": "string",
        "nullable": true,
        "description": "Managing director name"
      },
      "owner": {
        "type": "string",
        "nullable": true,
        "description": "Owner name (for sole proprietorships)"
      },
      "detail_url": {
        "type": "string",
        "nullable": true,
        "description": "URL to the detailed business page"
      },
      "extracted_at": {
        "type": "string",
        "nullable": true,
        "description": "Timestamp when data was extracted"
      },
      "board_of_directors": {
        "type": "array",
        "nullable": true,
        "description": "List of board of directors"
      },
      "shareholders": {
        "type": "array",
        "nullable": true,
        "description": "List of shareholders"
      },
      "business_names": {
        "type": "array",
        "nullable": true,
        "description": "List of business names owned"
      },
      "business_activities": {
        "type": "array",
        "nullable": true,
        "description": "List of business activities"
      }
    }
  },
  "views": {
    "overview": {
      "title": "Business Registry Overview",
      "description": "Overview of businesses scraped from Maldives Business Registry",
      "transformation": {
        "fields": [
          "business_name",
          "business_type",
          "status",
          "registration_number",
          "address",
          "managing_director",
          "owner",
          "sme_classification",
          "business_activities",
          "detail_url",
          "extracted_at"
        ]
      },
      "display": {
        "component": "table",
        "properties": {
          "business_name": {
            "label": "Business Name",
            "format": "text"
          },
